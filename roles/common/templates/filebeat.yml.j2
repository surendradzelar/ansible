
filebeat.inputs:
{% for log_filename in LOG_FILES %}
- type: log
  enabled: true
  paths:
    - {{log_filename.file}}
    fields:
    - {{log_filename.type}}
    {% endfor %}




{% if IS_STRUCTURED %}
output.elasticsearch:
  hosts: ["172.31.24.27:9200"]
{% else %}
output.logstash:
  hosts: ["172.31.24.27:5044"]
{% endif %}


############ defaluts##########################
filebeat.config.modules:
  
  path: ${path.config}/modules.d/*.yml
  reload.enabled: false

setup.template.settings:
  index.number_of_shards: 1

  

